{
  "name": "netflix-linux",
  "version": "2.0.0",
  "description": "Unofficial Netflix desktop client for Linux with DRM support",
  "main": "src/main/index.js",
  "author": "u61d",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/u61d/netflix-linux"
  },
  "keywords": [
    "netflix",
    "linux",
    "electron",
    "desktop-client",
    "widevine",
    "drm",
    "streaming",
    "discord-rpc",
    "wayland",
    "hyprland",
    "appimage"
  ],
  "scripts": {
    "start": "electron --no-sandbox --disable-gpu-sandbox .",
    "dev": "NODE_ENV=development electron --no-sandbox --disable-gpu-sandbox . --inspect",
    "build": "electron-builder",
    "build:linux": "electron-builder --linux",
    "build:pacman": "electron-builder --linux pacman",
    "build:appimage": "electron-builder --linux AppImage",
    "build:deb": "electron-builder --linux deb",
    "postinstall": "electron-builder install-app-deps",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.{js,json,css,html}\"",
    "format:check": "prettier --check \"src/**/*.{js,json,css,html}\"",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@sentry/electron": "^5.5.0",
    "@xhayper/discord-rpc": "^1.3.0",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.1.7",
    "node-notifier": "^10.0.1",
    "sharp": "^0.34.5",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "https://github.com/castlabs/electron-releases#v39.1.0+wvcus",
    "electron-builder": "^26.0.12",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "@playwright/test": "^1.40.0",
    "playwright": "^1.40.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
